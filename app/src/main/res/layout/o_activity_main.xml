<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- ITS 3 X 3 main layout -->
    <!-- DARK WIDGET 08 -->

    <RelativeLayout
        android:layout_width="122dp"
        android:layout_height="90dp">

        <LinearLayout
            android:id="@+id/heart_layout_01"
            android:orientation="vertical"
            android:background="@drawable/red_heart_circle_black"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="27dp"
            android:layout_height="45dp">
            <TextClock
                android:id="@+id/heart_layout_02"
                android:gravity="center"
                android:format12Hour="ss"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="13sp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:ignore="NewApi,SmallSp" />
            <ImageView
                android:id="@+id/heart_layout_03"
                android:background="@drawable/red_heart_shape"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <TextClock
            android:background="@drawable/black_square_01"
            android:format12Hour="hh"
            android:fontFamily="@font/helveticaneueultralight"
            android:textSize="65sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:ignore="NewApi" />
        <TextClock
            android:textColor="@color/white"
            android:format12Hour="cccc"
            android:gravity="center"
            android:fontFamily="@font/market_fresh"
            android:textSize="11sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="15dp"
            tools:ignore="NewApi,SmallSp" />

    </RelativeLayout>

    <TextClock
        android:format12Hour="mm"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="95dp"
        android:gravity="center"
        android:textSize="65sp"
        android:textColor="@color/white"
        android:background="@drawable/black_square_01"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:ignore="NewApi" />

    <TextClock
        android:format12Hour="A"
        android:id="@+id/heart_layout_04"
        android:textColor="@color/white"
        android:fontFamily="@font/droidsans"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_marginTop="190dp"
        android:background="@drawable/black_square_01"
        android:layout_width="90dp"
        android:layout_height="45dp"
        tools:ignore="NewApi" />

</RelativeLayout>