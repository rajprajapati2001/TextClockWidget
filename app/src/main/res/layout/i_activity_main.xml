<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="300dp"
    android:layout_height="200dp">
    <!-- ITS 5 X 2 main layout -->
    <!-- DARK WIDGET 05 -->

    <LinearLayout
        android:layout_width="300dp"
        android:gravity="center|top"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <TextClock
            android:background="@drawable/black_square_01"
            android:textColor="@color/white"
            android:format12Hour="hh"
            android:fontFamily="@font/helveticaneueultralight"
            android:textSize="100sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="140dp"
            android:layout_height="140dp"
            tools:ignore="NewApi" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="140dp">

            <ImageView
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/white_circle_dought"
                android:layout_width="10dp"
                android:layout_height="10dp"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_margin="10dp"
                android:background="@drawable/white_circle_dought"
                android:layout_width="10dp"
                android:layout_height="10dp"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextClock
                android:format12Hour="mm"
                android:background="@drawable/black_square_01"
                android:id="@+id/main_clock42"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                android:textSize="65sp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                tools:ignore="NewApi,RtlHardcoded" />

            <TextClock
                android:id="@+id/heart_layout_04"
                android:format12Hour="A"
                android:background="@drawable/black_square_01"
                android:fontFamily="@font/droidsans"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="45dp"
                tools:ignore="NewApi,RtlHardcoded" />

        </LinearLayout>



    </LinearLayout>

    <TextClock
        android:format12Hour="cccc"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/market_fresh"
        android:layout_marginLeft="23dp"
        android:textSize="15sp"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:gravity="center"
        tools:ignore="NewApi,RtlHardcoded,SmallSp" />

    <LinearLayout
        android:layout_marginTop="145dp"
        android:layout_width="3000dp"
        android:layout_height="35dp">

        <TextClock
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/black_square_01"
            android:format12Hour="dd"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="NewApi" />

        <TextClock
            android:textColor="@color/white"
            android:format12Hour="MMMM"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/lato_regular"
            android:background="@drawable/black_square_01"
            android:layout_marginRight="5dp"
            android:layout_width="135dp"
            android:layout_height="35dp"
            tools:ignore="NewApi,RtlHardcoded" />

        <TextClock
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:textSize="20sp"
            android:format12Hour="yyyy"
            android:background="@drawable/black_square_01"
            android:layout_width="90dp"
            android:layout_height="35dp"
            tools:ignore="NewApi" />
    </LinearLayout>

</RelativeLayout>